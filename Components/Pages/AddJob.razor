@page "/addjob"
@using EasyPolicheck.Data;
@using System.Text.Json;
@using System.Text.Json.Nodes;
@inject JobsService JobsService
@inject NavigationManager NavManager

<h3>New job information</h3>

<input placeholder="Enter a title for this job" @bind-value="jobInfo.JobTitle" />
<input placeholder="Select source directory" @bind-value="jobInfo.SourceDir" />
<input placeholder="Select destination directory" @bind-value="jobInfo.DestDir" />
<input placeholder="Enter language" @bind-value="jobInfo.JobLang" />
<button onclick="@SaveNew">Save</button>

@code
{

    public JsonArray jobList = new JsonArray();
    public JobInfo jobInfo = new JobInfo();
    string? newJobTitle;
    string? newSourceDir;
    string? newDestDir;
    string? newJobLang;

    public void SaveNew()
    {
        jobList = JsonSerializer.Deserialize<JsonArray>(JobsService.LoadJobs());
        jobList.Add( new JobInfo
            {
                JobTitle = newJobTitle,
                SourceDir = newSourceDir,
                DestDir = newDestDir,
                JobLang = newJobLang
            });

        JobsService.SaveJobs(jobList);
        NavManager.NavigateTo("/managejobs");

    }
}
